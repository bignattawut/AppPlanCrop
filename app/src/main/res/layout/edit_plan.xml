        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที่เพาะปลูก :" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/EditMyDate"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/EditImageViewDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/dateplan" />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorlightGreen"
             android:orientation="vertical"
             android:padding="10dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="ขนาดพื้นที่เพาะปลูก"
                 android:textColor="@color/colorWhite"
                 android:textSize="25dp"
                 android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

             <GridLayout
                 android:layout_width="94dp"
                 android:layout_height="100dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/red_button"
                 android:backgroundTint="@color/colorlightGreen"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="10dp">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="ไร่"
                         android:textColor="@color/colorblack" />

                     <EditText
                         android:id="@+id/EditAddPlan1"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="1dp"
                         android:hint="0"
                         android:inputType="numberDecimal"
                         android:maxLength="5" />
                 </LinearLayout>
             </GridLayout>

             <GridLayout
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/red_button"
                 android:backgroundTint="@color/colorlightGreen"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="10dp">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="งาน"
                         android:textColor="@color/colorblack" />

                     <EditText
                         android:id="@+id/EditAddPlan2"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_margin="1dp"
                         android:hint="0"
                         android:inputType="number"
                         android:maxLength="4" />
                 </LinearLayout>
             </GridLayout>

             <GridLayout
                 android:layout_width="97dp"
                 android:layout_height="100dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/red_button"
                 android:backgroundTint="@color/colorlightGreen"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="10dp">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="ว่า"
                         android:textColor="@color/colorblack" />

                     <EditText
